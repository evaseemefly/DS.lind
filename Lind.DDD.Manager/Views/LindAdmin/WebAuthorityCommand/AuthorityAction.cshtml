@{
    ViewBag.Title = "所有授权的页面列表";
 
}
@model List<Tuple<string, string>>
<p>
    <a href="/WebAuthorityCommand/AuthorityAction?key=1" class="btn btn-primary">查询需要配置的菜单</a>
    <a href="/WebAuthorityCommand/DoAuthorityAction" class="btn btn-primary">填充缺失的权限菜单</a>

</p>
<table class="table table-hover table-bordered table-striped">
    <tbody>
        <tr>
            <th>名称</th>
            <th>对应的Url</th>
        </tr>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
            <tr>
                <td>@Html.Raw(item.Item1)</td>
                <td><a href="@item.Item2" target="_blank">@item.Item2</a></td>
            </tr>
            }
        }
    </tbody>
</table>
